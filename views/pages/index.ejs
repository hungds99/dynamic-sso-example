<!-- views/auth.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>SSO SignIn</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <!-- load bulma css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- load fontawesome -->
    <style>
      body {
        padding-top: 70px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <div class="text-center text-primary">
          <h1><span class="fa fa-lock"></span> SSO Authentication</h1>
          <p>Login or Register with:</p>
        </div>

        <div class="w-50 mx-auto">
          <form method="post" action="/auth/login/local">
            <div class="">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" class="form-control" placeholder="Email" />
            </div>
            <div class="mt-3">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="Password" />
            </div>
            <div class="text-center mt-2">
              <button class="btn btn-success" type="submit">Login</button>
            </div>
          </form>
        </div>
        <div class="text-center mt-4">
          <p>Or login with:</p>
          <a href="/auth/login/google" class="btn btn-danger"><span class="fa fa-google"></span> SignIn with Google </a>
          <a href="/auth/login/saml" class="btn btn-info">
            <span class="fa fa-address-book"></span> SignIn with Okta SAML
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
